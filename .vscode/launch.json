{
  "configurations": [
    {
      "type": "debugpy",
      "request": "launch",
      "name": "Launch main.py",
      "program": "${workspaceFolder}/${input:programPath}",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "python": "${workspaceFolder}/venv/Scripts/python.exe"
    }
  ],
  "inputs": [
    {
      "type": "promptString",
      "id": "programPath",
      "description": "Enter the path to the Python program to debug"
    }
  ]
}
